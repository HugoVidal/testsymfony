{% extends 'base.html.twig' %}

{% block title 'Liste des questions' %}

{% block body %}
    <div class="container mt-5">
        <h1>Liste des questions</h1>

        <h4 class="mt-4">Nouvelles questions</h4>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Question</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for question in new_questions %}
                <tr>
                    <td>{{ question.name }}</td>
                    <td>{{ question.email }}</td>
                    <td>{{ question.content }}</td>
                    <td>
                        <a class="btn btn-success text-white" href="{{ path('question.treat', {id: question.id}) }}">Traiter</a>
                        <a class="btn btn-danger text-white" href="{{ path('question.delete', {id: question.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <h4 class="mt-4">Questions déjà traitées</h4>
        <table class="table table-striped">
            <tbody>
            {% for question in treated_questions %}
                <tr>
                    <td>{{ question.name }}</td>
                    <td>{{ question.email }}</td>
                    <td>{{ question.content }}</td>
                    <td>
                        <label class="text-success">Traitée&nbsp;&nbsp;</label>
                        <a class="btn btn-danger text-white" href="{{ path('question.delete', {id: question.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-info mt-2" href="{{ path('home') }}">Retour</a>
    </div>
{% endblock %}